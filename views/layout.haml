%script{ src: :'http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js'}
%script{ src: :'http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js'}
%script{ src: :'http://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js'}
%script{ src: :'js/app.js'}
%link{ rel: :'stylesheet', type: :'text/css', href: :'/css/style.css' }

#container
  %header
    #logo
    %h1 Welcome to
    %a{ href: '/', title: 'DontForgetThese!'} DontForgetThese!
  #main-body
    %h2 Here are your to-dos:
    #all-todo-items
      %ul
        - @items.each do |item|
          #each-item
            %li.item= item
    #new-todo-button
      Make a new item
    #new-todo-item-options
      %form{ method: 'post', action: '', id: 'new_todo_item'}
        %input{ type: 'text', name: 'content'}
        %input{ type: 'submit', value: "Add it!"}
