%link{ rel: :'stylesheet', href: :'css/style.css' }

#container
  %header
    #logo
    %h1 Welcome to
    %a{ href: '/', title: 'DontForgetThese!'} DontForgetThese!
  #main-body
    %h2 Here are your to-dos:
    #all-todos
    #new-todo
      %input{ type: 'text', id: 'new-todo-description'}
      %button{ id: 'add-todo'} Add it


%script{ type: :'text/template', id: :'todo-template'}
  %div
    %h3= this.model.get('description')
    %input{type: 'checkbox', checked: "#{this.model.get('status')}"}
    %span X
